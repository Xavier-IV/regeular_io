<%= content_for(:title, 'Regülar: Food') %>

<div class="relative bg-cover bg-center h-[440px] py-20" style="background-image: url('/assets/hero_bg.png')">
  <div class="absolute inset-0 w-full h-fit flex justify-end z-10 px-8 py-4">
    <div class="h-fit w-fit flex gap-8">
      <% if user_signed_in? %>
        <%= link_to 'Dashboard', dashboards_path, class: 'p-1 border px-4 py-2 rounded-md', style: 'background: rgba(255, 255, 255, 0.2);
box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
backdrop-filter: blur(3px);
-webkit-backdrop-filter: blur(3px);' %>
      <% else %>
        <%= link_to 'For Business', business_root_url(host: Rails.application.credentials.dig(:host, :business)), target: '_blank', class: 'bg-white p-1' %>

        <%= link_to 'Login', new_user_session_path, class: 'font-bold bg-white p-1' %>
        <%= link_to 'Register', new_user_registration_path, class: 'font-bold bg-white p-1' %>
      <% end %>
    </div>
  </div>
  <div class="absolute inset-0 flex gap-10 flex-col items-center justify-center py-20 px-10 text-center">
    <div class="flex flex-col gap-2 items-center">
      <h1 class="text-4xl font-bold text-center bg-white w-fit">Regülar: Food</h1>
      <p class="text-gray-600 bg-white">Find the best food around, with <strong class="text-purple-600">genuine</strong>
        review</p>
    </div>
    <p class="text-gray-600 bg-white">
      <%= link_to business_root_url(host: Rails.application.credentials.dig(:host, :business)), target: '_blank' do %>
        <u>Want to add your business for free?</u>
      <% end %>
    </p>
    <% if Rails.env.development? %>
      <div class="w-full h-fit rounded-lg border px-8 py-4 max-w-lg bg-white flex gap-4 items-center text-gray-400">
        <i class="lni lni-search-alt"></i> Western
      </div>
    <% end %>
  </div>
</div>

<% if Rails.env.development? %>
  <div class="px-10 w-full">
    <div class="flex gap-1 w-full md:justify-center overflow-x-scroll rounded-full no-scrollbar">
      <button class="px-4 py-1 bg-green-600 text-white rounded-full flex-none">
        Halal
      </button>
      <button class="px-4 py-1 bg-green-600 text-white rounded-full flex-none">
        Western
      </button>
      <% @tags.each do |tag| %>
        <button class="px-4 py-1 border rounded-full hover:bg-black flex-none hover:text-white">
          <%= tag %>
        </button>
      <% end %>
    </div>
  </div>
  <div class="h-20"></div>
<% end %>

<% if Rails.env.development? %>
  <div class="flex gap-1 w-full max-w-6xl mx-auto px-10">
    <div class="flex md:flex-row flex-col gap-4">
      <div class="flex gap-1">
        <button class="px-4 py-1 border rounded-full bg-white hover:bg-black hover:text-white flex items-center gap-2">
          Most <span class="text-purple-600 flex items-center"><i class="lni lni-star-fill"></i></span>
        </button>
        <button class="px-4 py-1 border rounded-full bg-white hover:bg-black hover:text-white flex items-center gap-2">
          Most <span class="text-yellow-400 flex items-center"><i class="lni lni-star-fill"></i></span>
        </button>
      </div>
      <div class="flex gap-1">
        <select id="state" class="px-4 py-1 border-gray-300 rounded-full bg-white hover:bg-black hover:text-white flex items-center gap-2 w-[140px] justify-between">
          <option selected>State...</option>
          <option value="alor_gajah">Melaka</option>
        </select>
        <select id="city" class="px-4 py-1 border-gray-300 rounded-full bg-white hover:bg-black hover:text-white flex items-center gap-2 w-[140px] justify-between">
          <option selected>City...</option>
          <option value="alor_gajah">Alor Gajah</option>
        </select>
      </div>
    </div>
  </div>
  <div class="h-20"></div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 px-10 gap-10 w-full max-w-6xl mx-auto ">
  <% @businesses.each do |business| %>
    <div class="h-[240px] md:h-[200px] w-full border rounded-lg bg-white hover:drop-shadow-md flex overflow-hidden">
      <div class="relative w-full lg:w-52 h-full">
        <% if business.listing.present? && business.listing.attached? %>
          <%= image_tag url_for(business.listing), class: 'absolute w-full h-full object-cover z-10' %>
        <% end %>
        <div class="absolute w-full h-full bg-gradient-to-t from-black via-transparent to-transparent z-20"></div>
        <div class="absolute z-30 h-full w-full grid grid-cols-3 p-2 gap-1">
          <div class="w-16 h-16 rounded-full bg-gray-300 overflow-hidden border border-white border-2">
            <% if business.logo.present? && business.logo.attached? %>
              <%= image_tag url_for(business.logo), class: 'w-full h-full object-cover' %>
            <% end %>
          </div>
          <div class="hidden lg:block"></div>
          <div class="flex flex-col w-full h-full col-span-2 lg:col-span-3 lg:col-start-1 items-end lg:items-start">
            <div class="flex h-full lg:items-end items-start">
              <div class="flex gap-1">
                <% if Rails.env.development? %>
                  <div class="px-3 py-0.5 bg-white w-fit h-fit rounded-full text-sm gap-2 regular-customer-pill">
                  <span class="text-purple-600 flex items-center gap-2 font-bold"><i class="lni lni-star-fill"></i>
                    4.2
                  </span>
                  </div>
                  <div class="px-3 py-0.5 bg-white w-fit h-fit rounded-full text-sm gap-2 flex text-gray-600">
                    <span class="text-yellow-400 flex items-center gap-2"><i class="lni lni-star-fill"></i></span>
                    3.9
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="h-full w-full col-span-2 flex flex-col justify-end py-3 px-2 lg:hidden">
            <h2 class="text-2xl font-bold text-white"><%= business.name %></h2>
          </div>
        </div>
      </div>
      <div class="p-4 items-start hidden lg:flex flex-col justify-between">
        <div class="">
          <h2 class="text-2xl font-bold"><%= business.name %></h2>
          <p class="text-gray-400 text-sm">10 AM - 10 PM</p>
        </div>
        <% if Rails.env.development? %>
          <div class="text-sm">
            <div class="gap-2 items-center hidden lg:flex">
              <span class="text-purple-600 flex items-center w-fit"><i class="lni lni-star-fill"></i></span>
              <p>20 regular customers</p>
            </div>
            <div class="gap-2 items-center hidden lg:flex">
              <span class="text-yellow-400 flex items-center w-fit"><i class="lni lni-star-fill"></i></span>
              140 unique customers
            </div>
            <div class="h-2"></div>
            <button class="underline text-sm text-gray-400 hidden lg:block">See all reviews</button>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="h-10"></div>
<div class="flex flex-col items-center justify-center text-gray-300">
  <p>You've reached the end.</p>
  <div class="h-2"></div>
  <%= link_to business_root_url(host: Rails.application.credentials.dig(:host, :business)), target: '_blank' do %>
    <u>Add your business. It's free!</u>
  <% end %>
</div>
<div class="h-20"></div>
<% if Rails.env.development? %>
  <footer class="w-full bg-black text-white">
    <div class="w-full h-fit max-w-6xl text-white mx-auto py-20 grid grid-cols-2 md:grid-cols-4 gap-4 px-10">
      <div>
        <h2 class="text-xl font-bold">Regülar: Food</h2>
        <div class="h-4"></div>
        <p>For business</p>
        <p>For reviewers</p>
      </div>
    </div>
    <div class="w-full text-center py-4 text-gray-600">
      <p>&copy; 2023 Regeular. All rights reserved.</p>
    </div>
  </footer>
<% end %>