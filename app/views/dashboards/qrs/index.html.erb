<div id="bank_edit" class="flex flex-col gap-4 my-10 md:my-20">
  <div class="w-full h-fit grid grid-cols-2 md:grid-cols-3 gap-4 mx-auto px-10 md:px-0">
    <div class="flex flex-col gap-3">
      <div class="cursor-pointer order-2 overflow-hidden md:order-4 w-full h-[140px] md:h-[200px] bg-gradient-to-l from-violet-500 to-indigo-500 rounded-2xl shadow flex flex-col items-center justify-center text-white gap-4">
        <div class="flex items-center justify-center grow pt-4">
          <%= image_tag 'icons/icon_bubble.svg', class: 'w-4/6', alt: 'Empty rewards' %>
        </div>
        <div class="divide-x flex w-full divide-green-400">
          <%= link_to dashboards_qrs_reviews_path, class: 'flex bg-purple-400 w-full p-3 items-center justify-center' do %>
            <p class="md:text-lg hidden md:block">Scan</p>
            <i class="lni lni-search-alt md:hidden"></i>
          <% end %>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-3">
      <div class="cursor-pointer order-2 overflow-hidden md:order-4 w-full h-[140px] md:h-[200px] bg-gradient-to-l from-violet-500 to-indigo-500 rounded-2xl shadow flex flex-col items-center justify-center text-white gap-4">
        <div class="flex items-center justify-center grow">
          <%= image_tag 'icons/icon_bank.svg', class: 'h-16', alt: 'Empty rewards' %>
        </div>
        <div class="divide-x flex w-full divide-purple-300 bg-purple-400">
          <%= link_to edit_dashboards_qrs_bank_path, class: 'flex w-full p-3 items-center justify-center' do %>
            <p class="md:text-lg hidden md:block">Edit</p>
            <i class="lni lni-pencil md:hidden"></i>
          <% end %>
          <%- if current_client.business.business_bank.present? %>
            <%= link_to dashboards_qrs_bank_path, class: 'flex w-full p-3 items-center justify-center' do %>
              <p class="md:text-lg hidden md:block">Scan</p>
              <i class="lni lni-search-alt md:hidden"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>