<div class="flex flex-col gap-4 py-10 md:py-20 overflow-scroll no-scrollbar">
  <%- if @ready %>
    <div class="w-full h-fit grid grid-cols-2 md:grid-cols-3 gap-4 mx-auto px-10 md:px-10 md:px-0">
      <%= turbo_stream_from current_client.business, 'qr_codes_review' %>

      <div
        style="box-shadow: 0px 4px 10px rgba(131, 105, 221, 0.50);"
        class="col-span-3 cursor-pointer order-2 py-10 md:py-6 md:order-4 w-full h-fit py-10 bg-gradient-to-l from-violet-500 to-indigo-500 rounded-2xl shadow flex flex-col items-center justify-center text-white gap-1">
        <div id="codes" class="flex flex-col items-center">
          <div class="w-52 md:w-60 h-full p-4 text-center">
            <%= raw generate_qr(qr_code_url(reference: @qr.id)) %>
          </div>
          <p class="print:hidden"><%= link_to 'Go to link', qr_code_url(reference: @qr.id) if Rails.env.development? %></p>
        </div>
        <small class="print:hidden my-2"><%= pluralize(@qr.scanned_times, 'user') %> has scanned</small>
        <div class="w-full flex flex-col gap-2 px-4 items-center text-center">
          <h1 class="text-lg font-light text-gray-200">Share your review with us!</h1>
        </div>
      </div>
      <div class="w-full h-fit px-4 flex col-span-3 items-center justify-center text-center row-start-2">
        <p class="print:hidden text-gray-400">Tips: Increase phone brightness to help user scan easily.</p>
      </div>
    </div>
  <% else %>
    <div class="border rounded-2xl bg-white p-6 md:p-10 my-10 mx-10 md:mx-0 flex flex-col gap-4">
      <p>To start collecting reviews:</p>
      <div class="flex flex-col gap-2">
        <div class="flex gap-4 items-center">
          <span class="<%= @business.owner.confirmed_at.present? ? 'text-green-500' : 'text-gray-400' %> flex items-center"><i class="lni lni-checkmark-circle"></i></span>
          <p>Verified email</p>
        </div>
        <div class="flex gap-4 items-center">
          <span class="<%= @business.logo.present? && @business.logo.attached? ? 'text-green-500' : 'text-gray-400' %> flex items-center"><i class="lni lni-checkmark-circle"></i></span>
          <p>Business Logo</p>
        </div>
        <div class="flex gap-4 items-start">
          <span class="<%= @business.listing.present? && @business.listing.attached? ? 'text-green-500' : 'text-gray-400' %> pt-1 flex items-center"><i class="lni lni-checkmark-circle"></i></span>
          <p>Listing image of one of your product (i.e. foods, drinks, services, etc)</p>
        </div>
        <div class="flex gap-4 items-start">
          <span class="<%= @business.approved_at.present? ? 'text-green-500' : 'text-gray-400' %> pt-1 flex items-center"><i class="lni lni-checkmark-circle"></i></span>
          <p>Approved account</p>
        </div>
        <div class="flex gap-4 items-start">
          <span class="<%= @business.created_at < 1.day.ago ? 'text-green-500' : 'text-gray-400' %> pt-1 flex items-center"><i class="lni lni-checkmark-circle"></i></span>
          <p>Account created at least 1 day</p>
        </div>
      </div>
    </div>
    </div>
  <% end %>
</div>