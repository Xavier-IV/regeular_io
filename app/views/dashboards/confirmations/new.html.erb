<div class="w-full px-10 md:px-0">
  <div class="w-full h-fit p-10 pb-14 bg-white border rounded-2xl mt-20">
    <%= @sent_at %>
    <%- if @sent_at.present? && @sent_at + 2.minutes < Time.zone.now %>
      <h2 class="text-lg font-semibold">Resend confirmation instructions?</h2>

      <%= form_for(resource, as: resource_name, url: dashboards_confirmations_path, html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <p class="mt-4">Be sure to check your spam box as well.</p>
        <%= f.hidden_field :email, value: (current_client.pending_reconfirmation? ? current_client.unconfirmed_email : current_client.email) %>

        <div class="actions mt-6">
          <button
            type="submit"
            class="px-3 py-2 bg-purple-600 rounded-md text-white">
            Resend
          </button>
        </div>
      <% end %>
    <% else %>
      <div class="flex flex-col items-center justify-center p-10 gap-4">
        <p>Please wait 2 minutes before sending again.</p>
      </div>
    <% end %>
  </div>
</div>