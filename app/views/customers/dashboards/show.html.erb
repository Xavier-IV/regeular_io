<div>
  <h1 class="font-bold text-2xl">Welcome<%= ", #{current_customer.full_name}" if current_customer.full_name.present? %></h1>

  <div class="mt-10">
    <% current_customer.reviews.each do |review| %>
      <div class="flex flex-col gap-2 border rounded-md p-4 px-6 bg-white shadow-lg">
        <p class="text-gray-400">Location - <%= review.business.name %></p>
        <div class="flex gap-2">
          <% (1..5).each do |rating_value| %>
            <%= render(Shared::Review::StarComponent.new(role: rating_value > review.rating ? :default : :star)) %>
          <% end %>
        </div>
        <p><%= review.description %></p>
      </div>
    <% end.empty? and begin %>
      <div class="flex flex-col items-center justify-center bg-white border border-slate-200 py-10 rounded-lg gap-4">
        <div class="w-40 opacity-80 mb-10">
          <%= image_tag 'undraw/reviews.svg', class: 'w-5/6 md:w-4/6 md:w-full h-full p-2', alt: 'QR Code' %>
        </div>
        <p class="text-gray-400">You have no reviews yet.</p>
        <%= link_to 'Browse merchants', food_root_path, target: '_blank', class: 'text-purple-400' %>
      </div>
    <% end %>
  </div>
</div>
