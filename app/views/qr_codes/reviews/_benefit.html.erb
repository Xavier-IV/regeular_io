<div class="flex flex-col w-full items-center px-2 gap-2 text-gray-500 text-left mt-10">
  <%- if @rewards.present? %>
    <%- unless customer_signed_in? %>
      <p>Wait, this merchant has rewards! ðŸ‘€</p>
      <p>Quickly sign in to unlock and potentially claim merchant's rewards.</p>
    <% else %>
      <%- if @rewards_discounts.present? %>
        <h1 class="font-semibold">Discounts</h1>
        <%- @rewards_discounts.each do |reward| %>
          <p>Earn discount of <%= reward_name(reward) %> off when you become regular customer for every 5
            receipts.</p>
        <% end %>
      <% end %>

      <% if @rewards_birthdays.present? %>
        <h1 class="font-semibold">Birthday Rewards</h1>
        <%- @rewards_birthdays.each do |reward| %>
          <p>Receive discount of <%= reward_name(reward) %> off on your birthday!</p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
