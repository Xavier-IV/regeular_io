<div
  data-controller="dashboard--reward"
  id="account_edit" class="w-full grid grid-cols-2 md:grid-cols-3 gap-4 mx-auto px-10 md:px-0 mt-10">
  <div class="col-span-2 md:col-span-1">
    <%= render partial: 'clients/dashboards/rewards/discounts/preview', locals: {
      model: @reward
    } %>
  </div>

  <div
    data-controller="dashboard--detail"
    class="order-1 md:order-1 w-full col-span-2 rounded-2xl p-6 flex flex-col justify-start gap-2 bg-[#4CA2C7] rounded-[20px] shadow text-white">
    <div class="flex flex-col space-between h-full">
      <%= render partial: 'clients/dashboards/rewards/discounts/form', locals: {
        model: @reward,
        url: clients_dashboards_reward_discount_path(@reward),
        method: :put
      } %>
    </div>
  </div>

</div>

<%= render 'clients/dashboards/rewards/discounts/how' %>
