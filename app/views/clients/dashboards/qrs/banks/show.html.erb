<div class="w-full p-4 flex md:hidden">
  <%= link_to clients_dashboards_qrs_path do %>
    <i class="lni lni-arrow-left text-2xl"></i>
  <% end %>
</div>
<div class="flex flex-col gap-4 py-4 md:py-10 overflow-scroll no-scrollbar">
  <div class="w-full h-fit grid grid-cols-2 md:grid-cols-3 gap-4 mx-auto px-4 md:px-0">
    <div
      style="box-shadow: 0px 4px 10px rgba(131, 105, 221, 0.50);"
      class="col-span-3 cursor-pointer order-2 py-10 md:py-6 md:order-4 w-full h-fit py-10 bg-gradient-to-l from-violet-500 to-indigo-500 rounded-2xl shadow flex flex-col items-center justify-center text-white gap-1">
      <div class="w-52 md:w-60 h-full p-4 text-center">
        <%= raw @svg %>
      </div>

      <div class="w-full flex flex-col gap-2 px-4 items-center text-center">
        <h1 class="text-xl font-light text-gray-200"><%= @bank_info.business.name %></h1>
        <hr class="border-t-1 border-white w-4/6 my-2">
        <h2 class="text-2xl font-semibold"><%= @bank_info.bank.name %></h2>
        <div class="md:h-2"></div>
        <h2 class="text-xl"><%= @bank_info.full_name %></h2>
        <div class="md:h-2"></div>
        <h3 class="text-xl md:text-2xl"><%= @bank_info.account_number.scan(/.{1,4}/).join(' ') %></h3>
        <div class="md:h-2"></div>
      </div>
    </div>
    <div class="print:hidden w-full h-fit px-4 flex col-span-3 items-center justify-center text-center row-start-2">
      <p class="text-gray-400">Tips: Increase phone brightness to help user scan easily.</p>
    </div>
  </div>
</div>