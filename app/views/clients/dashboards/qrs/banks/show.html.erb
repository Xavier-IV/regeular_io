<% content_for :back_to do %>
  <%= link_to clients_dashboards_qrs_path do %>
    <i class="lni lni-arrow-left text-2xl"></i>
  <% end %>
  <div class="col-span-3 flex items-center justify-center">Bank Transfer QR</div>
<% end %>

<div class="flex flex-col gap-4 py-4 md:py-10 overflow-scroll no-scrollbar">
  <%= render 'clients/dashboards/info' %>
  <div class="w-full h-fit flex flex-col gap-4 mx-auto px-4 md:px-4 md:px-0">
    <div
      style="box-shadow: 0px 4px 10px rgba(131, 105, 221, 0.50);"
      class="col-span-3 cursor-pointer py-10 md:py-6 md:order-4 w-full h-fit py-10 bg-gradient-to-l from-violet-500 to-indigo-500 rounded-2xl shadow flex flex-col items-center justify-center text-white gap-1">
      <div class="w-52 md:w-60 h-full p-4 text-center">
        <div id="codes" class="flex flex-col items-center">
          <%= raw @svg %>
        </div>
      </div>

      <div class="w-full flex flex-col gap-2 px-4 items-center text-center">
        <h1 class="text-lg font-light text-gray-200">Bank Transfer Information</h1>
      </div>
    </div>

    <div class="w-full flex flex-col gap-2 px-4 items-center text-center">
      <h1 class="text-xl font-light text-gray-700"><%= @bank_info.business.name %></h1>
      <h2 class="text-2xl font-semibold"><%= @bank_info.bank.name %></h2>
      <h2 class="text-xl"><%= @bank_info.full_name %></h2>
      <h3 class="text-xl md:text-2xl"><%= @bank_info.account_number.scan(/.{1,4}/).join(' ') %></h3>
    </div>

    <div class="mt-10 print:hidden w-full h-fit px-4 flex col-span-3 items-center justify-center text-center row-start-2">
      <p class="text-gray-400">Tips: Increase phone brightness to help user scan easily.</p>
    </div>
  </div>
</div>