<% content_for :back_to do %>
  <div class="w-full hidden pwa:flex">
    <%= link_to clients_dashboards_path do %>
      <i class="lni lni-arrow-left text-2xl"></i>
    <% end %>
  </div>
  <div class="col-span-3 flex items-center justify-center">Moodboards</div>
<% end %>

<div
  class="w-full h-fit mx-auto px-4 md:px-0 mt-4 mb-10 flex flex-col">

  <div class="w-full h-fit md:hidden">
    <div class="flex gap-2 items-center text-gray-700 pl-0.5">
      <h1 class="text-lg">Visualisation</h1>
    </div>
    <p class="text-gray-400 text-sm pl-0.5">Moodboard is powerful tool to help with visualisation.</p>
    <div class="flex flex-col gap-1 mt-4 text-gray-800">
      <%= link_to new_clients_dashboards_tool_moodboards_banner_path, class: 'w-full p-3 px-5 bg-gray-200 rounded-md flex items-center justify-between' do %>
        <p class="flex items-center gap-2"><span class="text-xs">💬</span>️ Banner</p>
        <div class="w-14 h-2 rounded-full bg-gray-300 overflow-hidden">
          <div class="h-full bg-green-500 rounded-full" style="width: <%= @gen_banners_used %>%;"></div>
        </div>
      <% end %>

      <%= link_to new_clients_dashboards_tool_moodboards_interior_design_path, class: 'w-full p-3 px-5 bg-gray-200 rounded-md flex items-center justify-between' do %>
        <p class="flex items-center gap-2"><span class="text-xs">💬</span>️ Interior Design</p>
        <div class="w-14 h-2 rounded-full bg-gray-300 overflow-hidden">
          <div class="h-full bg-green-500 rounded-full" style="width: <%= @gen_interior_used %>%;"></div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="w-full h-fit flex items-center justify-center mt-10">
    <p class="text-gray-400 text-sm pl-0.5 text-center">Disclaimer: Visualisation provided serves as guidance and inspiration, its
      content may be skewed or inaccurate to your business depiction.</p>
  </div>
</div>